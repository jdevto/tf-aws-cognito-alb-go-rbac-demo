# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

# REQUIRED: Domain name for the application
domain_name = "demo.yourdomain.com"

# Optional: AWS region (default: ap-southeast-2)
region = "ap-southeast-2"

# Optional: Seed users (auto-generated with secure temporary passwords)
# Can be a single email (string), list of emails, or null/omitted
# Passwords are auto-generated and sent to the user's email
admin_email           = "admin@example.com"
request_creator_email = "creator@example.com"
reviewer_email        = "reviewer@example.com"
viewer_email         = "viewer@example.com"

# Example: Multiple users per group
# admin_email = ["admin1@example.com", "admin2@example.com"]

# Example: Skip creating users for a group
# request_creator_email = null
